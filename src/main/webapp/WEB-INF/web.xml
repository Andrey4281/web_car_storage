<web-app>
    <servlet>
        <servlet-name>default</servlet-name>
        <servlet-class>
            org.apache.catalina.servlets.DefaultServlet
        </servlet-class>
        <init-param>
            <param-name>debug</param-name>
            <param-value>0</param-value>
        </init-param>
        <init-param>
            <param-name>listings</param-name>
            <param-value>false</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>ru.job4j.web_cars_storage.controlers.CreateNewAdvertServlet</servlet-name>
        <servlet-class>ru.job4j.web_cars_storage.controlers.CreateNewAdvertServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ru.job4j.web_cars_storage.controlers.SignInServlet</servlet-name>
        <servlet-class>ru.job4j.web_cars_storage.controlers.SignInServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ru.job4j.web_cars_storage.controlers.SignUpServlet</servlet-name>
        <servlet-class>ru.job4j.web_cars_storage.controlers.SignUpServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ru.job4j.web_cars_storage.controlers.DownloadImagineServlet</servlet-name>
        <servlet-class>ru.job4j.web_cars_storage.controlers.DownloadImagineServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ru.job4j.web_cars_storage.controlers.UserServlet</servlet-name>
        <servlet-class>ru.job4j.web_cars_storage.controlers.UserServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ru.job4j.web_cars_storage.controlers.GetDataServlet</servlet-name>
        <servlet-class>ru.job4j.web_cars_storage.controlers.GetDataServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ru.job4j.web_cars_storage.controlers.SignOutServlet</servlet-name>
        <servlet-class>ru.job4j.web_cars_storage.controlers.SignOutServlet</servlet-class>
    </servlet>

    <filter>
        <filter-name>ru.job4j.web_cars_storage.controlers.SignInFilter</filter-name>
        <filter-class>ru.job4j.web_cars_storage.controlers.SignInFilter</filter-class>
    </filter>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/static/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ru.job4j.web_cars_storage.controlers.CreateNewAdvertServlet</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ru.job4j.web_cars_storage.controlers.SignInServlet</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ru.job4j.web_cars_storage.controlers.SignUpServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ru.job4j.web_cars_storage.controlers.DownloadImagineServlet</servlet-name>
        <url-pattern>/download</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ru.job4j.web_cars_storage.controlers.GetDataServlet</servlet-name>
        <url-pattern>/data</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ru.job4j.web_cars_storage.controlers.UserServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ru.job4j.web_cars_storage.controlers.SignOutServlet</servlet-name>
        <url-pattern>/signout</url-pattern>
    </servlet-mapping>

    <filter-mapping>
        <filter-name>ru.job4j.web_cars_storage.controlers.SignInFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

</web-app>