<?xml version = "1.0" encoding = "utf-8"?>

<hibernate-configuration>
    <session-factory>

        <property name="connection.url">jdbc:hsqldb:mem:web_cars_storage;sql.enforce-size=false</property>
        <property name="connection.driver_class">org.hsqldb.jdbcDriver</property>
        <property name="show_sql">true</property>
        <property name="dialect">org.hibernate.dialect.HSQLDialect</property>
        <property name="hibernate.hbm2ddl.auto">create</property>

        <mapping class="ru.job4j.web_cars_storage.models.Role"/>
        <mapping class="ru.job4j.web_cars_storage.models.User"/>
        <mapping class="ru.job4j.web_cars_storage.models.Advert"/>
        <mapping class="ru.job4j.web_cars_storage.models.Car"/>

    </session-factory>
</hibernate-configuration>
